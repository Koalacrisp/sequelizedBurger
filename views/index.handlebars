<h1>Eat-Da-Burger!</h1>
	<div class="eatBurger">
	<ol>
		{{#each burgers}}
			{{#unless this.devoured}}
				<li>
					{{this.burger_name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button class="burgerButton" type"submit">Devour it!</button>
					</form>
				</li>
			{{/unless}}
		{{/each}}
	</ol>
	</div>

	<div class="eatenBurger">
	<ol>
		{{#each burgers}}
			{{#if this.devoured}}
				<li>
					{{this.burger_name}}
				</li>
			{{/if}}
		{{/each}}
	</ol>
	</div>

	<div class="submitBurger">
	<form class="create-update-form" action="/" method="POST">

		<div class="form-group">
			<input type="text" id="burg" name="name">
		</div>

		<button type="submit">Submit</button>
	</form>

	<h3>Enter a burger you want to eat then click the "Submit" button</h3>
	</div>
